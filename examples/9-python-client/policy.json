{
    "policyId": "org.eclipse.ditto:read-write-policy",
    "entries": {
        "OWNER": {
            "subjects": {
                "nginx:ditto": {
                    "type": "basic auth"
                },
                "nginx:hid-nova": {
                    "type": "basic auth"
                }
            },
            "resources": {
                "thing:/": {
                    "grant": [
                        "READ",
                        "WRITE"
                    ],
                    "revoke": []
                },
                "policy:/": {
                    "grant": [
                        "READ",
                        "WRITE"
                    ],
                    "revoke": []
                }
            }
        }
    }
}
