{
    "policyId": "org.eclipse.ditto:light-001-policy",
    "entries": {
        "devicePermissions": {
            "subjects": {
                "device:light-001": {
                    "type": "ditto client"
                }
            },
            "resources": {
                "thing:/": {
                    "grant": [
                        "WRITE"
                    ],
                    "revoke": []
                }
            }
        },
        "applicationPermissions": {
            "subjects": {
                "nginx:ditto": {
                    "type": "basic auth user"
                }
            },
            "resources": {
                "policy:/": {
                    "grant": [
                        "READ",
                        "WRITE"
                    ],
                    "revoke": []
                },
                "thing:/": {
                    "grant": [
                        "READ",
                        "WRITE"
                    ],
                    "revoke": []
                }
            }
        }
    }
}