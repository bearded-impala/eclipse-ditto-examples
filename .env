# Eclipse Ditto Configuration
# ===========================

# Ditto API Configuration
DITTO_HOST=localhost
DITTO_PORT=8080
DITTO_PROTOCOL=http
DITTO_BASE_URL=${DITTO_PROTOCOL}://${DITTO_HOST}:${DITTO_PORT}

# Authentication
DITTO_USERNAME=ditto
DITTO_PASSWORD=ditto
DITTO_AUTH=${DITTO_USERNAME}:${DITTO_PASSWORD}

# DevOps Authentication (for connectivity operations)
DITTO_DEVOPS_USERNAME=devops
DITTO_DEVOPS_PASSWORD=foobar
DITTO_DEVOPS_AUTH=${DITTO_DEVOPS_USERNAME}:${DITTO_DEVOPS_PASSWORD}

# API Endpoints
DITTO_API_BASE=${DITTO_BASE_URL}/api/2
DITTO_THINGS_API=${DITTO_API_BASE}/things
DITTO_POLICIES_API=${DITTO_API_BASE}/policies
DITTO_SEARCH_API=${DITTO_API_BASE}/search/things
DITTO_DEVOPS_API=${DITTO_BASE_URL}/devops

# Namespace Configuration
DITTO_NAMESPACE=org.eclipse.ditto
DITTO_TEST_NAMESPACE=my.test
DITTO_SENSORS_NAMESPACE=my.sensors

# Thing IDs
SENSOR_001_ID=${DITTO_NAMESPACE}:sensor-001
LIGHT_001_ID=${DITTO_NAMESPACE}:light-001
SENSOR_002_ID=${DITTO_NAMESPACE}:sensor-002
SENSOR_003_ID=${DITTO_NAMESPACE}:sensor-003
SENSOR_004_ID=${DITTO_NAMESPACE}:sensor-004
SENSOR_005_ID=${DITTO_NAMESPACE}:sensor-005
SENSOR_006_ID=${DITTO_NAMESPACE}:sensor-006
TEST_SENSOR_ID=${DITTO_SENSORS_NAMESPACE}:sensor

# Policy IDs
SENSOR_001_POLICY_ID=${DITTO_NAMESPACE}:sensor-001-policy
LIGHT_001_POLICY_ID=${DITTO_NAMESPACE}:light-001-policy
SENSOR_POLICY_ID=${DITTO_NAMESPACE}:sensor-policy
TEST_POLICY_ID=${DITTO_TEST_NAMESPACE}:policy

# MQTT Configuration
MQTT_BROKER_HOST=host.docker.internal
MQTT_BROKER_PORT=1883
MQTT_TOPIC_PREFIX=${DITTO_SENSORS_NAMESPACE}

# Connection Configuration
CONNECTION_TIMEOUT=10

# File Paths
FLEET_FOLDER=fleet

# Logging Configuration
LOG_LEVEL=INFO

# Additional Thing IDs
VEHICLE_001_ID=${DITTO_NAMESPACE}:vehicle-001
VEHICLE_001_POLICY_ID=${DITTO_NAMESPACE}:vehicle-001-policy
DOORLOCK_001_ID=${DITTO_NAMESPACE}:doorlock-001
DOORLOCK_001_POLICY_ID=${DITTO_NAMESPACE}:doorlock-001-policy
KETTLE_001_ID=${DITTO_NAMESPACE}:kettle-001
KETTLE_001_POLICY_ID=${DITTO_NAMESPACE}:kettle-001-policy
SENSOR01_ID=${DITTO_SENSORS_NAMESPACE}:sensor01
SENSOR02_ID=${DITTO_SENSORS_NAMESPACE}:sensor02
